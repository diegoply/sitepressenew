{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<article class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-8">

    <!-- Présentation Article -->
    <h1 class="text-4xl font-bold text-green-500 mb-4 text-center">{{ article.title }}</h1>

    <p class="text-gray-700 text-2xl leading-relaxed text-center mt-12 font-bold">
        Catégorie : {{ article.ArticleCategory.name }}
    </p>


    <p class="text-gray-700 text-1xl leading-relaxed text-center mt-12">
        Publié le : {{ article.publishedAt ? article.publishedAt|date('d/m/Y H:i', 'Europe/Paris') : 'Date non définie' }}
    </p>

    
    <p class="text-2xl text-gray-700 leading-relaxed text-center mt-12">{{ article.content }}</p>

    <!-- Liste des commentaires -->
    <div class="max-w-3xl mx-auto mt-8">
        <h2 class="text-3xl font-bold text-green-500 mb-4 text-center mt-8">Liste des commentaires</h2>

        {# 3 premiers commentaires #}
        {% for comment in comments|slice(0, 3) %}
            <div class="hover:bg-green-50 border-b py-4">
                <p class="text-sm text-gray-500 mt-2 text-center">
                    {{ comment.publishedAt ? comment.publishedAt|date('d/m/Y H:i', 'Europe/Paris') : 'Date non définie' }}
                </p>
                <p class="text-gray-700 text-center mt-2">{{ comment.comment }}</p>
            <div class="text-right">
                <a href="{{ path('app_deleteComment', {'id': comment.id}) }}" class="text-red-500 hover:underline ">Supprimer</a>
            </div>
            </div>

            
        {% else %}
            <p class="text-center py-4">Aucun commentaire</p>
        {% endfor %}

        {# Le reste des commentaires cachés #}
        {% if comments|length > 3 %}
            <div id="all-comments" class="hidden">
                {% for comment in comments|slice(3) %}
                    <div class="hover:bg-green-50 border-b py-4">
                        <p class="text-sm text-gray-500 mt-2 text-center">
                            {{ comment.publishedAt ? comment.publishedAt|date('d/m/Y H:i', 'Europe/Paris') : 'Date non définie' }}
                        </p>
                        <p class="text-gray-700 text-center mt-2">{{ comment.comment }}</p>
                    </div>
                {% endfor %}
            </div>
            <div class="text-center">
                <button id="show-more-comments" class="mt-4 px-10 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition">
                    Plus de commentaires
                </button>
            </div>

            
        {% endif %}
    </div>

    <!-- Formulaire commentaire -->
    <div class="max-w-3xl mx-auto mt-8 text-green-500">
        {{ form_start(form) }}

        <div class="mb-5">
            {{ form_label(form.comment, null, {
                label_attr: { class: 'block text-sm font-semibold text-green-500 mb-1' }
            }) }}

            {{ form_widget(form.comment, {
                attr: {
                    class: 'w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400 transition'
                }
            }) }}

            {{ form_errors(form.comment) }}
        </div>

        <div class="mt-4 text-center">
            {{ form_widget(form.submit, {
                attr: {
                    class: "px-20 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400"
                }
            }) }}
        </div>

        {{ form_end(form) }}
    </div>

</article>

<script>
    const btn = document.getElementById('show-more-comments');
    const allComments = document.getElementById('all-comments');

    btn?.addEventListener('click', () => {
        allComments.classList.toggle('hidden');
        btn.textContent = allComments.classList.contains('hidden') ? 'Plus de commentaires' : 'Moins de commentaires';
    });
</script>

{% endblock %}
