{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
<div class="w-full max-w-md p-8 bg-white border border-green-500 shadow-lg rounded-lg">
<h1 class = "text-2xl font-bold mb-6 text-center text-green-500">Nouvelle cat√©gorie</h1>
<div class = "text-green-500">
    {{ form_start(form) }}

    <div class="mb-5">
    {{ form_label(form.name, null, {
        label_attr: {
            class: 'block text-sm font-semibold text-green-500 mb-1'
        }
    }) }}

    {{ form_widget(form.name, {
        attr: {
            class: 'w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400 transition'
        }
    }) }}

    <div class="mt-4 text-center">
    {{ form_widget(form.submit, {
        attr: {
            class: "px-20 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400"
        }
    }) }}
</div>


{{ form_end(form) }}
</div>
</div>

{% endblock %}
