{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="w-full max-w-md p-8 bg-white border border-green-500 shadow-lg rounded-lg">

    <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Inscrivez-vous</h1>

    {# Affiche les erreurs globales du formulaire #}
    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            {{ form_label(form.username, 'Pr√©nom', {'label_attr': {'class': 'block mb-2 text-gray-700 font-medium'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500'}}) }}
            <div style="color: red; text-align: center;">
            {{ form_errors(form.username) }}
            </div>
        </div>

        

        <div>
            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block mb-2 text-gray-700 font-medium'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div>
            {{ form_widget(form.submit, {'attr': {'class': 'w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400'}}) }}
        </div>

    {{ form_end(form) }}

    {% for message in app.flashes('error') %}
    <div class="mb-4 text-red-600 font-medium text-center">
        {{ message }}
    </div>
    {% endfor %}

</div>

{% endblock %}
