{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="w-full max-w-md p-8 bg-white border border-green-500 shadow-lg rounded-lg">


    <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Connectez vous</h1>

    {% if error %}
        <div class="mb-4 text-red-600 font-medium text-center">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% if app.user %}
        <div class="mb-4 p-2 bg-gray-100 rounded text-center">
            You are logged in as {{ app.user.userIdentifier }}, 
            <a href="{{ logout_path() }}" class="text-green-500 hover:underline">Logout</a>
        </div>
    {% endif %}

    <form method="post" class="space-y-4">

        <div>
            <label for="username" class="block mb-2 text-gray-700 font-medium">Pseudo</label>
            <input 
                type="text" 
                value="{{ last_username }}" 
                name="_username" 
                id="username" 
                autocomplete="username" 
                required 
                autofocus
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
            >
        </div>

        

        <div>
            <label for="password" class="block mb-2 text-gray-700 font-medium">Mots de passe</label>
            <input 
                type="password" 
                name="_password" 
                id="password" 
                autocomplete="current-password" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
            >
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button 
            type="submit" 
            class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400"
        >
            Identifier vous
        </button>

    </form>
</div>

{% endblock %}


